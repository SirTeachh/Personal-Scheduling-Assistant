<style>
    body {
        background-color: #f8f9fa;
        font-family: "Poppins", sans-serif;
    }

    main.container {
        background-color: transparent !important;
    }

    /* Key Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes zoomIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    /* Animation Utilities */
    .fade-in {
        opacity: 0;
        animation: fadeIn 1s ease forwards;
    }

    .fade-in-up {
        opacity: 0;
        animation: fadeInUp 0.8s ease forwards;
    }

    .zoom-in {
        opacity: 0;
        animation: zoomIn 0.8s ease forwards;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(to right, #0a2540, #1c4e80);
        color: #fff;
        padding: 80px 30px;
        border-radius: 20px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
        transition: all 0.3s ease;
        animation: fadeInUp 1s ease forwards;
    }

        .hero-section:hover {
            transform: translateY(-3px);
        }

    /* Section Title */
    .section-title {
        text-align: center;
        font-weight: 700;
        color: #0a2540;
        margin-bottom: 40px;
        position: relative;
        animation: fadeInUp 1s ease forwards;
    }

        .section-title::after {
            content: "";
            display: block;
            width: 80px;
            height: 3px;
            background: #1c4e80;
            margin: 12px auto 0;
            border-radius: 10px;
        }

    /* Cards */
    .card {
        border: none;
        transition: all 0.3s ease;
        animation: fadeInUp 1s ease forwards;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

    /* Background section */
    .p-5.rounded-4.shadow-sm.text-white {
        animation: fadeInUp 1s ease forwards;
    }

    .team-card img {
        border: 4px solid #1c4e80;
        object-fit: cover;
        animation: zoomIn 1s ease forwards;
    }

    .contact-section {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        animation: fadeIn 1s ease forwards;
    }

    a.text-dark:hover {
        color: #1c4e80 !important;
    }
</style>

