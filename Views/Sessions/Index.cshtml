@model IEnumerable<PersonalSchedulingAssistant.Models.Session>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Welcome, @ViewBag.LecturerName 👋</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Session
        </a>
    </div>

    @if (ViewBag.Modules != null)
    {
        <form asp-action="Index" method="get" class="mb-3">
            <div class="d-flex gap-2 align-items-center">
                <label class="form-label me-2 mb-0">Filter by Module:</label>
                <select name="moduleId" class="form-select w-auto"
                        onchange="this.form.submit()">
                    <option value="">All Modules</option>
                    @foreach (var module in ViewBag.Modules)
                    {
                        var selected = ViewBag.SelectedModuleId != null &&
                                       (int)ViewBag.SelectedModuleId == module.ModuleId
                                       ? "selected" : ""; 

                        <option value="@module.ModuleId"
                                selected="@(ViewBag.SelectedModuleId != null && (int)ViewBag.SelectedModuleId == module.ModuleId)">
                            @module.ModuleCode - @module.ModuleName
                        </option>
                    }
                </select>
            </div>
        </form>
    }

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Module</th>
                    <th>Week Day</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Venue</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No sessions available.</td>
                    </tr>
                }
                else
                {
                    @foreach (var session in Model)
                    {
                        <tr>
                            <td>@session.Module?.ModuleCode - @session.Module?.ModuleName</td>
                            <td>@session.WeekDay</td>
                            <td>@session.StartTime</td>
                            <td>@session.EndTime</td>
                            <td>@session.Venue?.Name (@session.Venue?.Building)</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@session.SessionId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@session.SessionId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@session.SessionId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-5">
        <a asp-controller="Lecturer" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-semibold">
            <i class="fas fa-home me-2"></i> Back to Overview
        </a>

        <a asp-controller="Allocations" asp-action="Index" class="btn btn-primary px-4 py-2 fw-semibold">
            <i class="fas fa-tasks me-2"></i> Allocations
        </a>
    </div>
</div>


