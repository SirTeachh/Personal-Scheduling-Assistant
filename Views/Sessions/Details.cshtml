@model PersonalSchedulingAssistant.Models.Session
@{
    ViewData["Title"] = "Session Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Session Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.SessionId" class="btn btn-warning me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.SessionId" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Delete
            </a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Module Information</h5>
                    <p class="card-text"><strong>Code:</strong> @Model.Module?.ModuleCode</p>
                    <p class="card-text"><strong>Name:</strong> @Model.Module?.ModuleName</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Schedule</h5>
                    <p class="card-text"><strong>Day:</strong> @Model.WeekDay</p>
                    <p class="card-text"><strong>Start Time:</strong> @Model.StartTime</p>
                    <p class="card-text"><strong>End Time:</strong> @Model.EndTime</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Venue Information</h5>
                    <p class="card-text"><strong>Name:</strong> @Model.Venue?.Name</p>
                    <p class="card-text"><strong>Building:</strong> @Model.Venue?.Building</p>
                    <p class="card-text"><strong>Capacity:</strong> @Model.Venue?.Capacity @(Model.CapacityOverride.HasValue ? $" (Overridden: {Model.CapacityOverride})" : "")</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
</div>