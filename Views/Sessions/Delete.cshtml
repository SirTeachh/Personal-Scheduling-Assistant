@model PersonalSchedulingAssistant.Models.Session
@{
    ViewData["Title"] = "Delete Session";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">Delete Session</h2>
    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this session?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Module</h5>
                    <p class="card-text">@Model.Module?.ModuleCode - @Model.Module?.ModuleName</p>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Schedule</h5>
                    <p class="card-text"><strong>Day:</strong> @Model.WeekDay</p>
                    <p class="card-text"><strong>Time:</strong> @Model.StartTime - @Model.EndTime</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Venue</h5>
                    <p class="card-text">@Model.Venue?.Name (@Model.Venue?.Building)</p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SessionId" />
        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>