@using PersonalSchedulingAssistant.Models.ViewModels
@model UserViewModel

@{
    ViewData["Title"] = "Manage Users";
}

<h1 class="mb-3">Manage Users</h1>

<form method="get" class="row mb-4 g-2 align-items-end">
    <div class="col-md-3">
        <label class="form-label fw-bold">Filter by Role</label>
        <select name="roleFilter" class="form-select" onchange="this.form.submit()">
            <option value="">-- All Roles --</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Name" selected="@(ViewBag.RoleFilter == role.Name)">
                    @role.Name
                </option>
            }
        </select>
    </div>

    <div class="col-md-4">
        <label class="form-label fw-bold">Search</label>
        <input type="text" name="searchString" class="form-control"
               placeholder="Name or Email"
               value="@ViewBag.SearchString" />
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Apply</button>
    </div>
</form>

<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.FirstNameSortParm"
                   asp-route-roleFilter="@ViewBag.RoleFilter" asp-route-searchString="@ViewBag.SearchString">
                    First Name
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.SecondNameSortParm"
                   asp-route-roleFilter="@ViewBag.RoleFilter" asp-route-searchString="@ViewBag.SearchString">
                    Last Name
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.RoleSortParm"
                   asp-route-roleFilter="@ViewBag.RoleFilter" asp-route-searchString="@ViewBag.SearchString">
                    Role
                </a>
            </th>
            <th>Email</th>
            <th>Approved</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.allUsers.Any())
        {
            <tr><td colspan="6">No users found.</td></tr>
        }
        else
        {
            @foreach (var user in Model.allUsers)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.SecondName</td>
                    <td>
                        @foreach (var role in user.RoleNames)
                        {
                            <span class="badge bg-secondary me-1">@role</span>
                        }
                    </td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Approved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pending</span>
                        }

                        <form asp-action="ToggleApproval" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-warning ms-2">
                                @(user.Approved ? "Revoke" : "Approve")
                            </button>
                        </form>
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="mt-5 text-center d-flex justify-content-center gap-3 flex-wrap">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-semibold">
        <i class="fas fa-home me-2"></i> Back to Overview
    </a>

    <a asp-controller="Account" asp-action="Register" class="btn btn-success px-4 py-2 fw-semibold">
        <i class="fas fa-user-plus me-2"></i> Add New User
    </a>
</div>