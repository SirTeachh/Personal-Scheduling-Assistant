@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome, @User.Identity.Name</h1>
        <p class="lead">Manage your sessions, allocations, conflicts, and notifications efficiently.</p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-4">
        <div class="col-md-6 col-lg-4">
            <a asp-controller="Sessions" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card">
                    <div class="card-body">
                        <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Session Management</h5>
                        <p class="card-text">View, create, and manage all your sessions with ease.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-controller="Allocations" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card">
                    <div class="card-body">
                        <i class="fas fa-user-friends fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Allocations</h5>
                        <p class="card-text">Assign students and manage allocations efficiently.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-controller="Conflict" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card">
                    <div class="card-body">
                        <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                        <h5 class="card-title">Conflict Resolution</h5>
                        <p class="card-text">Identify and resolve scheduling conflicts quickly.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-6">
            <a asp-controller="DemmieDistribution" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card">
                    <div class="card-body">
                        <i class="fas fa-tasks fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Demmie Distribution</h5>
                        <p class="card-text">Manage and track demmie assignments for upcoming sessions.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-6">
            <a asp-controller="Lecturer" asp-action="Notifications" class="text-decoration-none">
                <div class="card shadow-sm h-100 text-center hover-card">
                    <div class="card-body">
                        <i class="fas fa-bell fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Notifications</h5>
                        <p class="card-text">Stay up-to-date with session changes, reminders, and alerts.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

</div>