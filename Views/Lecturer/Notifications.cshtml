@model IEnumerable<PersonalSchedulingAssistant.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<div class="container mt-5">
    <h2 class="fw-bold mb-4"><i class="bi bi-bell"></i> Notifications</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-check-circle"></i> No notifications available.
        </div>
    }
    else
    {
        <div class="list-group shadow-sm">
            @foreach (var n in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-start @(n.IsRead ? "" : "bg-light")">
                    <div>
                        <h5 class="mb-1">@n.Title</h5>
                        <p class="mb-1 text-muted">@n.Message</p>
                        <small class="text-secondary">@n.CreatedAt.ToLocalTime().ToString("g") — @n.Category</small>
                    </div>
                    @if (!n.IsRead)
                    {
                        <form asp-action="MarkAsRead" method="post" class="ms-3">
                            <input type="hidden" name="id" value="@n.NotificationId" />
                            <button class="btn btn-sm btn-outline-primary">Mark as Read</button>
                        </form>
                    }
                </div>
            }
        </div>
    }
    <div class="align-items-center mt-4">
        <a asp-controller="Lecturer" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-semibold">
            <i class="fas fa-home me-2"></i> Back to Overview
        </a>
    </div>
</div>
