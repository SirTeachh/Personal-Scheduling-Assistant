@{
    ViewData["Title"] = "Email Confirmation Required";
}

<div class="container mt-5 text-center">
    <div class="card shadow-sm border-0 p-4" style="max-width: 600px; margin: 0 auto;">
        <h2 class="text-danger mb-3">
            <i class="bi bi-envelope-exclamation"></i> Confirm Your Email
        </h2>
        <p class="lead">
            We've sent a confirmation link to your email address.
            Please check your inbox (and spam folder) and click the link to activate your account.
        </p>
        <p>
            Once confirmed, you’ll be able to <a asp-action="Login" asp-controller="Account">log in</a>.
        </p>
        <hr />
        <p class="text-muted">
            Didn’t receive the email?
        </p>
        <form asp-action="ResendConfirmationEmail" method="post" class="d-inline">
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-arrow-repeat"></i> Resend Email
            </button>
        </form>
    </div>
</div>
