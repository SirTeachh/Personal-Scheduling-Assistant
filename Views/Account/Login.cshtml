@using PersonalSchedulingAssistant.Models.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
        <div class="text-center mb-4">
            <i class="bi bi-calendar-check display-4 text-primary"></i>
            <h3 class="fw-bold mt-2 text-dark">Welcome Back</h3>
            <p class="text-muted mb-0">Sign in to access your scheduling dashboard</p>
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger small mb-2"></div>
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control rounded-3" placeholder="name@example.com" />
                <label asp-for="Email" class="text-muted small"></label>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control rounded-3" placeholder="••••••••" />
                <label asp-for="Password" class="text-muted small"></label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label small"></label>
                </div>
                <a asp-action="ForgotPassword" class="small text-primary text-decoration-none">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-3 fw-semibold d-flex align-items-center justify-content-center"
                    style="height: 40px;">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </button>
        </form>

        <hr class="my-4">

        <div class="text-center small">
            <span class="text-muted">Don’t have an account?</span>
            <a asp-action="Register" class="fw-semibold text-decoration-none text-primary">Register</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
