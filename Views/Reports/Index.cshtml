@{
    ViewData["Title"] = "Reports & Analytics";
}

<div class="container mt-5">
    <!-- PAGE HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-graph-up"></i> Reports & Analytics
        </h2>
        <button class="btn btn-outline-primary" onclick="window.print()">
            <i class="bi bi-printer"></i> Export / Print
        </button>
    </div>

    <!-- SUMMARY CARDS -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center p-4">
                <i class="bi bi-person-workspace text-primary fs-2 mb-2"></i>
                <h5 class="fw-bold">Lecturers</h5>
                <p class="fs-4 fw-semibold text-dark">@ViewBag.LecturerCount</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center p-4">
                <i class="bi bi-people-fill text-success fs-2 mb-2"></i>
                <h5 class="fw-bold">Demmies</h5>
                <p class="fs-4 fw-semibold text-dark">@ViewBag.DemmieCount</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center p-4">
                <i class="bi bi-journal-bookmark text-warning fs-2 mb-2"></i>
                <h5 class="fw-bold">Modules</h5>
                <p class="fs-4 fw-semibold text-dark">@ViewBag.ModuleCount</p>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center p-4">
                <i class="bi bi-calendar-check text-danger fs-2 mb-2"></i>
                <h5 class="fw-bold">Active Sessions</h5>
                <p class="fs-4 fw-semibold text-dark">@ViewBag.SessionCount</p>
            </div>
        </div>
    </div>

    <!-- CHARTS SECTION -->
    <div class="row g-4">
        <!-- Lectures per Module -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light fw-semibold">
                    <i class="bi bi-bar-chart"></i> Sessions per Module
                </div>
                <div class="card-body">
                    <canvas id="moduleSessionsChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <!-- Demmie Load -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light fw-semibold">
                    <i class="bi bi-pie-chart"></i> Demmie Workload Distribution
                </div>
                <div class="card-body">
                    <canvas id="demmieLoadChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- TABLE SECTION -->
    <div class="card shadow-sm border-0 rounded-3 mt-5">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-table"></i> Recent Conflicts Summary
        </div>
        <div class="card-body">
            @if (ViewBag.Conflicts != null && ViewBag.Conflicts.Count > 0)
            {
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Detected</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var conflict in ViewBag.Conflicts)
                        {
                            <tr>
                                <td>@conflict.Type</td>
                                <td>@conflict.Description</td>
                                <td>
                                    @if (conflict.IsResolved)
                                    {
                                        <span class="badge bg-success">Resolved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Unresolved</span>
                                    }
                                </td>
                                <td>@conflict.CreatedAt.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted fst-italic">No recent conflicts found.</p>
            }
        </div>
    </div>

    <div class="mt-5 text-center">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-semibold">
            <i class="fas fa-home me-2"></i> Back to Overview
        </a>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Sessions per Module chart
        const moduleCtx = document.getElementById('moduleSessionsChart').getContext('2d');
        new Chart(moduleCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ModuleNames)),
                datasets: [{
                    label: 'Number of Sessions',
                    data: @Html.Raw(Json.Serialize(ViewBag.SessionCounts)),
                    backgroundColor: '#0d6efd'
                }]
            },
            options: { responsive: true, plugins: { legend: { display: false } } }
        });

        // Demmie workload chart
        const demmieCtx = document.getElementById('demmieLoadChart').getContext('2d');
        new Chart(demmieCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.DemmieNames)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.DemmieWorkloads)),
                    backgroundColor: ['#198754', '#0dcaf0', '#ffc107', '#dc3545', '#6f42c1']
                }]
            },
            options: { responsive: true, plugins: { legend: { position: 'bottom' } } }
        });
    </script>
}

